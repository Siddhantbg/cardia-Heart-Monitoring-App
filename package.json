{
  "name": "cardia",
  "version": "1.0.0",
  "description": "Cardia - AI-powered Heart Health Predictor (MERN Stack)",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "start": "concurrently \"npm run server:start\" \"npm run client:build\"",
    "client:dev": "cd client && npm run dev",
    "client:build": "cd client && npm run build",
    "client:preview": "cd client && npm run preview",
    "server:dev": "cd server && npm run dev",
    "server:start": "cd server && npm start",
    "install:all": "npm install && cd client && npm install && cd ../server && npm install",
    "clean": "rm -rf client/node_modules server/node_modules client/dist"
  },
  "keywords": ["heart", "health", "prediction", "ai", "mern", "react", "express"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}